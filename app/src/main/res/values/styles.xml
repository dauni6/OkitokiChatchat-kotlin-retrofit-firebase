<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- MessageActivity 애니메이션 효과 -->
    <style name="FadeInOutAnimation">
        <item name="android:windowEnterAnimation">@anim/fromright</item>
        <item name="android:windowExitAnimation">@anim/toleft</item>
    </style>

    <!-- 스플래시 액티비티에 풀 스크린 적용하기 반드시 parent 해줘야함, 적용시 시계의 상태창 까지 안 보임 -->
    <style name="SplashFullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 버튼 -->
    <style name="StandardButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/standard_button_rounded</item>
    </style>

    <!-- TextInputLayout activated underline 클릭시 밑줄과 글자도 오렌지색으로 바꿈-->
    <style name="TextInputLayoutUnderlineColor">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="WindowFullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
